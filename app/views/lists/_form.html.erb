
<div class="row">
  <div class="col-md-8">
    <%= form_for @list do |f| %>
      <div class="form-group">
        <%= f.label :title %> <br>
        <%= f.text_field :title %> <br>
      </div>
      <div class="form-group">
        <%= f.label :body %> <br>
        <%= f.text_area :body %> <br>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
